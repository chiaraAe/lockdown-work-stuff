<%= render 'banner' %>

<section class="sorry" style="display: <%= @show_sorry %>;">
  <h2><%= @sorry %></h2>
</section>

<section class="search-result" style="display: <%= @show_result_sec %>;">
  <h2><%= @text %></h2>
  <div class="cards">
  <% @search_result.each do |item|  %>
    <div class="card-item">
      <%= link_to item_path(item) do %>
      <%= cl_image_tag item.photos.first.key, crop: :fill, class: "card-item" %>
      <% end %>
      <h4><%= item.title %></h4>
      <h6><%= item.description %></h6>

      <div class="card-item-booking">
        <p><%= item.category %> | <%= item.price %>€ per day</p>
        <button type="button"><%= link_to "Mine!", item_path(item) %></button>
      </div>
    </div>
  <% end %>
  </div>
</section>

<section class="hot-stuff">
  <h2>Hot Stuff</h2>
  <div class="cards">
  <% @items.last(3).each do |item|  %>
    <div class="card-item">
      <% if item.photos.attached? %>
        <% item.photos.each do |photo|  %>
          <%= link_to item_path(item) do %>
          <%= cl_image_tag photo.key, crop: :fill, class: "card-item" %>
          <% end %>
        <% end %>
      <% end %>
      <h4><%= item.title %></h4>
      <h6><%= item.description %></h6>

      <div class="card-item-booking">
        <p><%= item.category %> | <%= item.price %>€ per day</p>
        <button type="button"><%= link_to "Mine!", item_path(item) %></button>
      </div>
    </div>
  <% end %>
  <%= link_to "More stuff", items_path, class:"btn-more" %>
  </div>
</section>

<section>
  <h2>Categories</h2>
  <div class="cards">
    <div class="d-flex flex-column">
      <div class="card-categories">
      <%= cl_image_tag("lockdown/electronics_bfyhgy", width: 235, height: 190) %>
      </div>
      <h4>Electronics</h4>
    </div>

    <div class="d-flex flex-column">
      <div class="card-categories">
      <%= cl_image_tag("lockdown/furnitures_zua7nb", width: 235, height: 190) %>
      </div>
      <h4>Furniture</h4>
    </div>

    <div class="d-flex flex-column">
        <div class="card-categories">
        <%= cl_image_tag("lockdown/pets_plants_eyqatm", width: 235, height: 190) %>
        </div>
        <h4>Pets & Plants</h4>
    </div>
</div>

</section>


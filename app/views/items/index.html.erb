<h2>All of our stuff</h2>

<div class="cards">
  <% @items.each do |item|  %>
  <div class="card-item">
    <img src="https://source.unsplash.com/200x100/?office,desk">
    <h4 class="card-title"><%= item.title %></h4>
    <p><%= item.description %></p>
    <p><%= item.price %></p>
    <button type="button" class="btn btn-outline-primary"><%= link_to "More Information", item_path(item) %></button>
  </div>
  <% end %>
</div>

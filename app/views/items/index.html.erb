<h2>All of our stuff</h2>

<div id="map"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="cards">
<% @items.each do |item|  %>
  <div class="card-item">
    <% item.photos.each do |photo|  %>
      <%= cl_image_tag photo.key, crop: :fill, class: "card-item" %>
    <% end %>
    <h4><%= item.title %></h4>
    <h6><%= item.description %></h6>

    <div class="card-item-booking">
      <p><%= item.category %> | <%= item.price %>â‚¬ per day</p>
      <button type="button"><%= link_to "Mine!", item_path(item) %></button>
    </div>
  </div>
<% end %>
</div>


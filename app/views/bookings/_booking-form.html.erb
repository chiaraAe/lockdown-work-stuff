<div class="booking-form">
  <h4>Book your stuff</h4>

  <div id='item-booking-dates' data-unavailable="<%= @item.unavailable_dates.to_json %>">
    <%= simple_form_for [ @item, @booking ] do |f| %>
      <%= f.input :starting_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if alert %>
    <div class="alert alert-warning alert-dismissible" role="alert" style="align-item: center">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
  <% end %>
